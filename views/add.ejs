<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Add Flashcard</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
<body>
  <div class="container">
    <nav>
      <a href="/add">Add Flashcard</a>
      <a href="/manageall">Manage Flashcards</a>
      <a href="/manage">Study Mode
      </a>

    </nav>
    <h1>Add a New Flashcard</h1>
    <% if (typeof error !== 'undefined') { %>
      <div class="error-message" style="color: red; margin-bottom: 1em;">
        <%= error %>
      </div>
    <% } %>
    <form action="/add" method="POST" class="add-flashcard-form">
      <label for="name">Card Name</label>
      <input type="text" id="name" name="name" placeholder="Card Name" value="<%= typeof name !== 'undefined' ? name : '' %>" class="<%= errors && errors.name ? 'input-error' : '' %>" />
      <% if (errors && errors.name) { %>
        <div class="error-message" style="color: red; margin-top: 0.25em; margin-bottom: 1em;">
          <%= errors.name %>
        </div>
      <% } %>
      
      <label for="description">Description</label>
      <textarea id="description" name="description" placeholder="Description" class="<%= errors && errors.description ? 'input-error' : '' %>"><%= typeof description !== 'undefined' ? description : '' %></textarea>
      <% if (errors && errors.description) { %>
        <div class="error-message" style="color: red; margin-top: 0.25em; margin-bottom: 1em;">
          <%= errors.description %>
        </div>
      <% } %>
      
    

      <button type="submit" class="btn-primary">Add Card</button>
    </form>
  </div>
</body>
</html>
